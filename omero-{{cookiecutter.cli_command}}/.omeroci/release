#!/usr/bin/env make -f
release:
ifndef VERSION
	$(error VERSION is undefined)
endif
	git describe --exact
	python setup.py sdist
	echo twine upload dist/omero-{{cookicutter.cli_command}}-$(VERSION).tar.gz

clean:
	rm -rf build dist omero-{{cookiecutter.cli_command}}.egg-info *.pyc

.PHONY: release clean
